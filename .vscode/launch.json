{
    // Используйте IntelliSense, чтобы узнать о возможных атрибутах.
    // Наведите указатель мыши, чтобы просмотреть описания существующих атрибутов.
    // Для получения дополнительной информации посетите: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch MyGameDesktop",
            "request": "launch",
            "mainClass": "com.mytest.java.MyGameDesktop",
            "projectName": "demo",
            "classPaths": ["${workspaceFolder}\\desktop\\target\\classes"],
            
            "shortenCommandLine": "none"
        },
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            
            "name": "Launch DEBUG File",
            "request": "attach",
            "hostName": "localhost",
            "port": 8000,
            "preLaunchTask": "debugmvn",
            "mainClass": "${file}"
        }

    ]
}